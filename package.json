{
  "name": "@sleepygogo/tailwindcss-cli",
  "description": "A CLI Tool for easy TailwindCSS installation",
  "keywords": [
    "tailwindcss",
    "tailwind",
    "tool",
    "cli",
    "installation",
    "easy"
  ],
  "module": "index.js",
  "type": "module",
  "version": "0.0.4",
  "license": "MIT",
  "author": {
    "name": "SleepyGogo"
  },
  "bin": {
    "tailwindcss-cli": "index.js"
  },
  "scripts": {
    "start": "bun run index.js"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
  "dependencies": {
    "@inquirer/confirm": "^3.0.0",
    "chalk": "^5.3.0",
    "chalk-animation": "^2.0.3",
    "detect-package-manager": "^3.0.1",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^9.2.14",
    "nanospinner": "^1.1.0",
    "standard": "^17.1.0"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json",
    "rules": {
      "semi": "off",
      "space-before-function-paren": "off"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sleepy-gogo/tailwind-cli"
  }
}
